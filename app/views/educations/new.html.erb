<h1>Add Educations</h1>

<h3>Education list</h3>

<% if @education_save %>
    <% @education_save.each do |education| %>
        <div>
            <h4><%= education.title %></h4>
            <p><%= education.location %></p>
            <p><%= education.begin_date %> - <%= education.end_date %></p>
            <p><%= education.body %></p>
        </div>
    <% end %>
<% end %>

<%= form_with model: @education  do |f| %>
    <div>
        <%= f.label :title, "school" %>
        <%= f.text_field :title %>
    </div>

    <div>
        <%= f.label :begin_date, "begin_date" %>
        <%= f.date_field :begin_date %>
    </div>

    <div>
        <%= f.label :end_date, "end_date" %>
        <%= f.date_field :end_date %>
    </div>

    <div>
        <%= f.label :location, "location" %>
        <%= f.text_field :location %>
    </div>

    <div>
        <%= f.label :body, "description" %>
        <%= f.text_area :body %>
    </div>

    <div>
        <%= f.submit "Submit" %>
        <%= link_to "Pass", new_language_path %>
        <%= link_to "Back", :back %>
    </div>

<% end %>
