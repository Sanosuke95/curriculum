<h1>Skills</h1>

<%= render 'skills/shared/form', skill: @skill %>

<% if @skill_save %>
  <div class="table-responsive">
    <table class="table table-striped table-hover table-responsive">
      <thead class="table-dark">
        <tr>
          <th>#</th>
          <th>title</th>
          <th>level</th>
          <th>action</th>
        </tr>
      </thead>
      <tbody>
        <% @skill_save.each do |skill| %>
          <tr>
            <td><%= skill.id %></td>
            <td><%= skill.title %></td>
            <td><%= skill.level %></td>
            <td><%= link_to 'delete', skill_path(skill), data: {turbo_method: :delete}, class: 'btn btn-danger', type: "button" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>


